{
  "name": "generic-data-server",
  "version": "0.1.0",
  "description": "The portion of a micro-service that manages a database of a single document type.",
  "main": "generic-data-server.js",
  "keywords": [],
  "private": false,
  "scripts": {
    "postinstall": "typings install && npm run remove-node-ref-from-express-core-typings",
    "check-no-mongod-27016": "! lsof -i :27016",
    "check-no-server-2999": "! lsof -i :2999",
    "remove-node-ref-from-express-core-typings": "[[ ! -e node_modules/express-serve-static-core/express-serve-static-core.d.ts ]] || sed -i -- 's|/// <reference types=\"node\" />|// / <reference types=\"node\" />|' node_modules/express-serve-static-core/express-serve-static-core.d.ts",
    "install-in-node_modules": "bin/install-in-node_modules.sh",
    "build": "npm run install-in-node_modules && tsc --project . && npm run install-in-node_modules",
    "clean": "rm -f *.js *.js.map",
    "test-only": "npm run check-no-mongod-27016 && npm run check-no-server-2999 && NODE_ENV=development-test DISABLE_LOGGING=true mocha -R spec generic-data-server.tests.js",
    "test": "npm run build && npm run test-only"
  },
  "author": {
    "name": "Peter Snider",
    "email": "snider.peter@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.15.2",
    "configure-local": "github:psnider/configure-local",
    "document-database-if": "github:psnider/document-database-if",
    "es6-shim": "0.35.1",
    "express": "4.14.0",
    "express-serve-static-core": "0.1.1",
    "http-status-codes": "1.0.6",
    "in-memory-db": "github:psnider/in-memory-db",
    "mongodb-adaptor": "github:psnider/mongodb-adaptor",
    "mongoose": "4.6.5",
    "pino": "2.14.0",
    "promisify-node": "0.4.0",
    "request": "2.76.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "mocha": "3.1.2",
    "typescript": "2.0.6",
    "typings": "1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:psnider/generic-data-server.git"
  },
  "typings": "generic-data-server.d.ts"
}
